<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.kumat">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_kumat_kecil"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PengaturanActivity"
            android:label="@string/title_activity_pengaturan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BantuanActivity"
            android:label="@string/title_activity_bantuan"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver android:name=".AlarmReceiver" />

        <activity android:name=".ProfilActivity"></activity>

        <receiver android:name=".MyWidgetProvider" >

            <intent-filter >

                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />

            </intent-filter>

            <meta-data

                android:name="android.appwidget.provider"

                android:resource="@xml/widget_info" />

        </receiver>

        <service android:name=".ListViewWidgetService"

            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name=".BubleReceiver"/>
        <service android:name=".Bubble"/>

    </application>

</manifest>