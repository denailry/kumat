<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.kumat.Fragment.PengeluaranOtomatisFragment">

    <EditText
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:id="@+id/nama_otomatis"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:hint="Nama Barang"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/black"
        android:textColorHighlight="@android:color/black"
        android:shadowColor="@android:color/black"
        android:backgroundTint="@android:color/black"
        android:inputType="textPersonName"
        android:textSize="13sp"/>
    <EditText
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:id="@+id/nominal_otomatis"
        android:layout_below="@+id/nama_otomatis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="Nominal Harga"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/black"
        android:textColorHighlight="@android:color/black"
        android:shadowColor="@android:color/black"
        android:backgroundTint="@android:color/black"
        android:inputType="number"
        android:textSize="13sp"/>
    <EditText
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:id="@+id/tanggal_otomatis"
        android:layout_below="@+id/nominal_otomatis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="Tanggal"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/black"
        android:textColorHighlight="@android:color/black"
        android:shadowColor="@android:color/black"
        android:backgroundTint="@android:color/black"
        android:inputType="number"
        android:textSize="13sp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel4"
        android:layout_below="@+id/tanggal_otomatis"
        android:layout_alignLeft="@+id/tanggal_otomatis"
        android:layout_alignRight="@+id/tanggal_otomatis">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jam_otomatis"
            android:layout_marginTop="5dp"
            android:text="20 : 11"
            android:textColor="@android:color/black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="15sp"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_jam_otomatis"/>
    </RelativeLayout>
    <Button
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:text="submit"
        android:layout_below="@id/rel4"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_submit_otomatis"
        android:layout_marginTop="10dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_submit_otomatis"
        android:layout_marginTop="20dp">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_pengeluaran_otomatis"></android.support.v7.widget.RecyclerView>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/no_item_otomatis"
            android:layout_gravity="center"
            android:src="@drawable/noitem"/>
    </FrameLayout>


</RelativeLayout>
