<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.kumat.ProfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EEEEEE">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_profil"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorToolbar"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#E0E0E0"
                    android:id="@+id/cardd">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mobil1"
                        android:layout_margin="10dp"
                        android:id="@+id/img_foto_profil"/>
                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cardd"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/rel5"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="camat"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:id="@+id/txt_nama_profil"
                        />
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/edit_icon"
                        android:layout_toRightOf="@+id/txt_nama_profil"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/edit_nama_profil"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="camat@gmail.com"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:id="@+id/txt_email_profil"
                        />
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/edit_icon"
                        android:layout_toRightOf="@+id/txt_email_profil"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/edit_email_profil"/>

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:id="@+id/background_profil">

        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:background="@color/colorToolbar"
            android:layout_centerInParent="true">

            <EditText
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:hint="Username"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textColorHighlight="@android:color/white"
                android:shadowColor="@android:color/white"
                android:textColorLink="@android:color/white"
                android:backgroundTint="@android:color/white"
                android:id="@+id/edt_profil"
                android:textSize="16sp"
                android:inputType="textPersonName"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="save"
                android:background="@color/colorOverflow"
                android:textColor="@android:color/white"
                android:id="@+id/btn_save_profil"/>

        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>
