<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA000000"
    android:id="@+id/background_pop_up">


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/background_pop_up_putih"
        android:layout_centerInParent="true">
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn_exit"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_margin="20dp">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:id="@+id/radio_grup_periode">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Semua"
                    android:buttonTint="@android:color/black"
                    android:checked="true"
                    android:id="@+id/radio_semua_data"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Bulan ini"
                    android:buttonTint="@android:color/black"
                    android:id="@+id/radio_bulan"
                    android:layout_marginTop="5dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Hari ini"
                    android:buttonTint="@android:color/black"
                    android:id="@+id/radio_hari"
                    android:layout_marginTop="5dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Custom"
                    android:buttonTint="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:id="@+id/radio_custom"/>
            </RadioGroup>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_grup_periode"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@+id/radio_grup_periode"
                android:id="@+id/rel1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="27 - 11 - 2017"
                    android:layout_centerVertical="true"
                    android:id="@+id/txt_custom_1"
                    android:textColor="@android:color/black"/>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/btn_custom_1"
                    android:layout_toRightOf="@+id/txt_custom_1"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rel2"
                android:layout_below="@+id/rel1"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/rel1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_custom_2"
                    android:textSize="15sp"
                    android:text="27 - 11 - 2017"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/black"/>
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/btn_custom_2"
                    android:layout_toRightOf="@+id/txt_custom_2"/>
            </RelativeLayout>




            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel2"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:text="submit"
                android:layout_centerHorizontal="true"
                android:id="@+id/btn_submit_periode"/>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>