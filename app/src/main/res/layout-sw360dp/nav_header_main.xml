<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/bg_profile"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/bag_1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/mobil1"
            android:id="@+id/foto_profil"
            app:border_color="@color/colorPrimary"
            app:border_width="3dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/foto_profil"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:id="@+id/bag2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uname"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:id="@+id/txt_username"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uname@gmail.com"
                android:textColor="@android:color/black"
                android:layout_alignLeft="@+id/txt_username"
                android:layout_below="@id/txt_username"
                android:id="@+id/txt_user_email"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frame"
        android:layout_alignLeft="@+id/bag_1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/bag_1">
        <ImageView
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:src="@drawable/bar_contoh"
            android:id="@+id/bar" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lvl 1"
            android:layout_gravity="bottom"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="7dp"
            android:id="@+id/txt_lvl"/>
    </FrameLayout>

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/kumat_koin"
        android:layout_below="@+id/frame"
        android:layout_alignLeft="@+id/frame"
        android:id="@+id/koin"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KumatKoin"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@+id/koin"
        android:layout_alignTop="@+id/koin"
        android:layout_marginLeft="5dp"
        android:id="@+id/txt_kumat_koin"
        android:textSize="14sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@+id/txt_kumat_koin"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/txt_kumat_koin"
        android:id="@+id/jml_koin"
        android:textSize="22sp"/>



</RelativeLayout>