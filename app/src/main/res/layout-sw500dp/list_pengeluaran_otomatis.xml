<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <Button
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@drawable/v_bawah_hijau"
        android:id="@+id/btn_delete_otomatis"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listrik"
        android:textColor="@android:color/black"
        android:id="@+id/txt_nama_barang_otomatis"
        android:layout_toRightOf="@+id/btn_delete_otomatis"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_data_waktu"
        android:layout_alignParentRight="true"
        android:text="03:11 | 27"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:textColor="#115179"
        android:textSize="22sp"
        android:layout_marginRight="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_harga_otomatis"
        android:layout_toLeftOf="@+id/txt_data_waktu"
        android:text="2000"
        android:layout_centerVertical="true"
        android:textColor="#00857e"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginRight="45dp"
        />

</RelativeLayout>